			}
			counter++;
			
		}
		
		
		
		
		return input;
	}
	
	public int step(int low, int high){
		System.out.print("\n Processing partition: "+input[low]+" ");
		int pivot = input[low];
		int swapIndex = low + 1;
		for(int i = low + 1; i < high; i++){
			System.out.print(input[i]+" ");
			if(input[i] < pivot){
				swap(i, swapIndex);
				swapIndex++;
			}
		}
		swap(low, input[swapIndex-1]);
		//input[low] = pivot;
		//output[swapIndex-1] = pivot;
		System.out.print("\n input Result: ");
		for(int j = 0; j < input.length; j++){
			System.out.print(input[j]+" ");
		}
		return swapIndex-1;
	}
	
	private void swap(int x, int y){
		int temp = input[x];
		input[x] = input[y];
		input[y] = temp;
	}
	
	

	public static void main(String[] args) {
		// TODO Auto-generated method stub
		QuickSort sort = new QuickSort();
		sort.increaseSolution(sort.input);
		for(int i = 0;i < sort.output.length; i++)
		System.out.print(sort.output[i]+" ");
	}

}
